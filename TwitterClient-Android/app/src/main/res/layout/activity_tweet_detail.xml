<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sjohnsoncf.twitterclient_android.TweetDetailActivity">

    <ImageView
        android:id="@+id/img_view_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/text_view_tweet_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        app:layout_constraintLeft_toRightOf="@+id/img_view_profile"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="@+id/img_view_profile"
        app:layout_constraintBottom_toBottomOf="@+id/img_view_profile"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/text_view_tweet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TweetTextHere"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/img_view_profile"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:id="@+id/view_feed_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="View User's Timeline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_tweet_username"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_tweet_username"
        app:layout_constraintVertical_bias="0.516"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/text_view_retweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Retweeted msg here"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/text_view_tweet_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="24dp" />
</android.support.constraint.ConstraintLayout>
